set $back "#080808"
set $focus "#5f005f"
bar {
    separator_symbol :
    strip_workspace_numbers yes
    status_command python3 ~/dotfiles/py3status.py
    workspace_buttons yes
    colors {
        background $back
        statusline #7890a0

        focused_workspace  $focus $focus #000000
        active_workspace   #ffffff #333333
        inactive_workspace $back $back #7890a0
        urgent_workspace   #ffffff #900000
    }
}

